@page
@model pruebadesarrollo.Pages.IndexModel
@{
    ViewData["Title"] = "Panel de Administración - Licorería";
}

<head>
    <link href="~/css/index.css" rel="stylesheet" />
</head>

<body>
    <div class="liquor-main-container container">
        <main role="main" class="pb-3">
            <h1 class="bounceIn text-center">@ViewData["Title"]</h1>

            <div class="row">
                <div class="col-md-6 offset-md-3 text-center">
                    @if (HttpContext.Session.GetString("UsuarioRol") != null)
                    {
                        <h2 class="slideUp">¡Hola, @HttpContext.Session.GetString("UsuarioRol")!</h2>
                        <p>Estás logueado como: @HttpContext.Session.GetString("UsuarioRol")</p>
                        <a href="/Logout" class="btn btn-danger popIn">Cerrar Sesión</a>
                    }
                    else
                    {
                        <h2 class="slideUp">Bienvenido a la Licorería</h2>
                        <p>Accede a tu panel de administración para gestionar productos, ventas y más.</p>
                        <a href="/Login" class="btn btn-primary popIn">Iniciar Sesión</a>
                        
                    }
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
</body>
