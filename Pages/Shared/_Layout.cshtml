<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Licorería</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pruebadesarrollo.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="liquor-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 liquor-nav">
            <div class="liquor-container container">
                <button class="navbar-toggler liquor-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between liquor-nav-items">
                    <ul class="navbar-nav flex-grow-1 liquor-nav-list">
                        <li class="nav-item liquor-nav-item">
                            <a class="nav-link text-dark liquor-nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item liquor-nav-item">
                            <a class="nav-link text-dark liquor-nav-link" asp-area="" asp-page="/Tienda">Tienda</a>
                        </li>
                        @if (Context.Session.GetString("UsuarioRol") != null)
                        {
                            <li class="nav-item liquor-nav-item">
                                <a class="nav-link text-dark liquor-nav-link" asp-area="" asp-page="/Produ">Productos</a>
                            </li>
                            @if (Context.Session.GetString("UsuarioRol") == "Administrador")
                            {
                                <li class="nav-item liquor-nav-item">
                                    <a class="nav-link text-dark liquor-nav-link" asp-area="" asp-page="/Usuarios">Gestionar Usuarios</a>
                                </li>
                            }
                            <li class="nav-item liquor-nav-item">
                                <a class="nav-link text-dark liquor-nav-link" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item liquor-nav-item">
                                <a class="nav-link text-dark liquor-nav-link" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="liquor-main-container container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted liquor-footer">
        <div class="container">
            &copy; 2024 - Todos los derechos reservados- <a asp-area="" asp-page="/Index">Home</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
